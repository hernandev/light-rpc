{
    "name": "hernandev/light-rpc",
    "description": "LightRPC is a Clean, Easy and Simple, JSON-RPC client over HTTPS for PHP.",
    "type": "library",
    "tags": ["json-rpc", "json", "steem", "rpc", "light-rpc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Diego Hernandes",
            "email": "diego@hernandev.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "LightRPC\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LightRPC\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "mockery/mockery": "^1.0"
    }
}
